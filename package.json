{
  "name": "next-app",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "build": "next build",
    "db:generate": "npx drizzle-kit generate --schema=./db/schema.ts --dialect=postgresql --out=./drizzle/migrations",
    "db:migrate": "NODE_ENV=development tsx ./db/migrate.ts",
    "db:migrate:prod": "NODE_ENV=production tsx ./db/migrate.ts",
    "db:reset": "NODE_ENV=development bun ./db/reset.ts",
    "db:reset:prod": "NODE_ENV=production bun ./db/reset.ts",
    "db:seed": "NODE_ENV=development tsx ./db/seed.ts",
    "db:seed:prod": "NODE_ENV=production tsx ./db/seed.ts",
    "dev": "next dev",
    "docker:down": "docker-compose down -v",
    "docker:up": "docker-compose -f ./docker-compose.yml up -d --remove-orphans",
    "lint": "next lint",
    "lint-fix": "next lint --fix",
    "start": "next start",
    "type": "tsc --noEmit"
  },
  "dependencies": {
    "@neondatabase/serverless": "^1.0.0",
    "@radix-ui/react-accordion": "^1.2.11",
    "@radix-ui/react-dropdown-menu": "^2.1.15",
    "@radix-ui/react-slot": "^1.2.3",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "dotenv": "^16.5.0",
    "drizzle-kit": "^0.31.1",
    "drizzle-orm": "^0.44.0",
    "lucide-react": "^0.511.0",
    "next": "15.3.2",
    "next-auth": "^5.0.0-beta.28",
    "next-themes": "^0.4.6",
    "postgres": "^3.4.7",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "tailwind-merge": "^3.3.0",
    "ws": "^8.18.2"
  },
  "devDependencies": {
    "@babel/eslint-parser": "^7.27.0",
    "@eslint/eslintrc": "^3",
    "@tailwindcss/postcss": "^4",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "eslint": "^9",
    "eslint-config-next": "15.3.2",
    "eslint-plugin-package-json": "^0.29.1",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "tailwindcss": "^4",
    "tw-animate-css": "^1.3.0",
    "typescript": "^5"
  }
}
